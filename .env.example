# Feeds
FEEDS_FILE=src/configs/feeds.yaml

# Google Drive
GOOGLE_CREDENTIALS_PATH=.secrets/credentials.json
GOOGLE_TOKEN_PATH=.secrets/token.json
TOP_FOLDER_NAME=Daily Tech News
GOOGLE_DRIVE_FOLDER_ID=<google_drive_directory_id>   # leave blank to use Drive root as parent


OPENAI_API_KEY=<your_openai_key>
AI_MODEL=gpt-4o-mini

# Or local Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Telegram
TELEGRAM_BOT_TOKEN=<your_telegram_token>
TELEGRAM_CHAT_ID=<your_telegram_chat_id>        # user or group ID (negative ID for groups)
TELEGRAM_DEBUG=1
# Discord
DISCORD_WEBHOOK_URL=


# choose one by setting to 1 (priority order is: OPENAI > OLLAMA > HF > TEXTRANK > fallback)
USE_HF_SUMMARY=1           # local Transformers on CPU
USE_TEXTRANK=0             # fast extractive via TextRank (sumy)

# HF model (small + CPU-friendly)
HF_SUMMARY_MODEL=sshleifer/distilbart-cnn-12-6
HF_MAX_LEN=220
HF_MIN_LEN=80


# Force one backend:
#SUMMARY_BACKEND=hf            # or: openai | ollama | textrank | auto

# HF settings:
HF_SUMMARY_MODEL=sshleifer/distilbart-cnn-12-6
USE_CPU_ONLY=1                # force CPU even on Apple Silicon (optional)
HF_MAX_NEW_TOKENS=48
HF_MIN_NEW_TOKENS=16
HF_NUM_BEAMS=4
CHUNK_MAX_CHARS=2200

# Optional TextRank:
USE_TEXTRANK=1

# Toggle in auto mode (defaults: OPENAI=on, OLLAMA=on, HF=off, TEXTRANK=off)
# SUMMARY_BACKEND=hf
# DISABLE_OPENAI=1
# DISABLE_OLLAMA=1
# ENABLE_HF=1
